{
  "manifest_version": 3,
  "name": "URL-Specific DOM Tweaker",
  "version": "0.0.1",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://acanthus.cis.kanazawa-u.ac.jp/base/top/*"
      ],
      "js": ["scripts/inject.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://eduweb.sta.kanazawa-u.ac.jp/Portal/StudentApp/*"
      ],
      "js": ["scripts/makeTable.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://acanthus.cis.kanazawa-u.ac.jp/base/top/",
    "https://eduweb.sta.kanazawa-u.ac.jp/Portal/StudentApp/*",
    "https://ogawa3427.github.io/goodByeLMSPage/"
  ],
  "background": { "scripts": ["service_worker.js"] },
  "action": { "default_title": "Tweaker" }
} 