{
  "manifest_version": 3,
  "name": "Good Bye LMS Page",
  "version": "v0.1.1",
  "default_locale": "ja",
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://acanthus.cis.kanazawa-u.ac.jp/base/top/*"
      ],
      "js": ["scripts/inject.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://eduweb.sta.kanazawa-u.ac.jp/Portal/StudentApp/*"
      ],
      "js": ["scripts/makeTable.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": [
        "https://ogawa3427.github.io/goodByeLMSPage/*"
      ],
      "js": ["scripts/showTable.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "host_permissions": [
    "https://acanthus.cis.kanazawa-u.ac.jp/base/top/",
    "https://eduweb.sta.kanazawa-u.ac.jp/Portal/StudentApp/*",
    "https://ogawa3427.github.io/goodByeLMSPage/"
  ],
  "background": {
    "service_worker": "scripts/service_worker.js",
    "type": "module",
    "scripts": ["scripts/service_worker.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "good-bye-lms-page@ogawa3427.net"
    }
  },
  "action": {
    "default_title": "Tweaker"
  }
}
